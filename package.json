{
  "name": "mrm-tasks",
  "private": true,
  "repository": "git@github.com:chooin/mrm-tasks.git",
  "author": "Devin.Zhu <chooin@126.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "node scripts/check-pnpm.js",
    "build": "npm-run-all build:*",
    "build:next": "pnpm -r --filter ./packages/mrm-task-next build",
    "build:react-native": "pnpm -r --filter ./packages/mrm-task-react-native build",
    "build:serve": "pnpm -r --filter ./packages/mrm-task-serve build",
    "build:umi3": "pnpm -r --filter ./packages/mrm-task-umi3 build",
    "build:taro": "pnpm -r --filter ./packages/mrm-task-taro build",
    "build:laravel": "pnpm -r --filter ./packages/mrm-task-laravel build",
    "np:next": "pnpm -r --filter ./packages/mrm-task-next publish",
    "np:react-native": "pnpm -r --filter ./packages/mrm-task-react-native publish",
    "np:serve": "pnpm -r --filter ./packages/mrm-task-serve publish",
    "np:umi": "pnpm -r --filter ./packages/mrm-task-umi publish",
    "np:umi3": "pnpm -r --filter ./packages/mrm-task-umi3 publish",
    "np:taro": "pnpm -r --filter ./packages/mrm-task-taro publish",
    "np:laravel": "pnpm -r --filter ./packages/mrm-task-laravel publish"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@tarojs/taro": "^3.4.9",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.38",
    "@types/react-native": "^0.66.11",
    "@types/semver": "^7.3.9",
    "@types/styled-components": "^5.1.19",
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.3",
    "typescript": "^4.5.4"
  }
}
