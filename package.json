{
  "name": "mrm-tasks",
  "private": true,
  "repository": "git@github.com:chooin/mrm-tasks.git",
  "author": "Devin.Zhu <chooin@126.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm --filter './packages/*' build",
    "np:react-native": "pnpm --filter 'mrm-task-react-native' publish",
    "np:serve": "pnpm --filter 'mrm-task-serve' publish",
    "np:umi": "pnpm -filter 'mrm-task-umi' publish",
    "np:umi3": "pnpm --filter mrm-task-umi3 publish",
    "np:taro": "pnpm --filter 'mrm-task-taro' publish",
    "np:laravel": "pnpm --filter 'mrm-task-laravel' publish",
    "np:pkg": "pnpm --filter 'mrm-task-pkg' publish"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@tarojs/taro": "^3.4.9",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.38",
    "@types/react-native": "^0.66.11",
    "@types/semver": "^7.3.9",
    "@types/styled-components": "^5.1.19",
    "husky": "^7.0.4",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.3",
    "typescript": "^4.5.4"
  }
}
